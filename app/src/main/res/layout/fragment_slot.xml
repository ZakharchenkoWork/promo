<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"

        >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game"
    android:layout_above="@+id/bottomBar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:orientation="horizontal"
            android:weightSum="5">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/bar0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/bar1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/bar2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/bar3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/bar4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/winFirstThree"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:weightSum="5">

      <ImageView
          android:layout_width="0dp"
          android:layout_height="75dp"
          android:src="@drawable/drawable_23"
          android:scaleType="fitXY"
          android:layout_weight="3"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/winSecondThree"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:weightSum="5">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:src="@drawable/drawable_23"
            android:scaleType="fitXY"
            android:layout_weight="3"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/winLastThree"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:weightSum="5">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:src="@drawable/drawable_23"
            android:scaleType="fitXY"
            android:layout_weight="3"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/winFirstFour"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:weightSum="5">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:src="@drawable/drawable_23"
            android:scaleType="fitXY"
            android:layout_weight="4"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/winLastFour"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:weightSum="5">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:src="@drawable/drawable_23"
            android:scaleType="fitXY"
            android:layout_weight="4"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/winAll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:weightSum="5">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:src="@drawable/drawable_23"
            android:scaleType="fitXY"
            android:layout_weight="5"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/touchBlocker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>
</RelativeLayout>
        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="2.6"
                android:layout_marginRight="3dp"
                android:background="@drawable/win_bg">
                <TextView
                    android:id="@+id/win"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="WIN 3.552.1345"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="#cde9fc"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1.2"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/max_bet"/>
            <ImageView
                android:id="@+id/spin"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1.2"
                android:src="@drawable/spin"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>